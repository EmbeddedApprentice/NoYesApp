# Select environment (manage.py defaults to dev; wsgi/asgi default to prod)
DJANGO_SETTINGS_MODULE=noyesapp.settings.dev
# DJANGO_SETTINGS_MODULE=noyesapp.settings.prod

DATABASE_URL=postgres://user:password@localhost:5433/noyesapp

# Required in production (no default — app refuses to start without these)
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Production email (optional — app works without these)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@example.com
